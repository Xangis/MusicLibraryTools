<Window x:Class="ZTag_WMV.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ZetaTag Auto-Renamer" Height="320" Width="636" ResizeMode="NoResize" Background="Black" Foreground="Yellow">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <Label Foreground="Yellow" Margin="1">Directory: </Label>
            <TextBox Foreground="Yellow" Background="DimGray" Margin="1" Width="282" Name="txtDirectory">C:\</TextBox>
            <Button Margin="1" Width="76" Name="btnBrowse" Click="btnBrowse_Click">Browse</Button>
            <Label Foreground="Yellow" Margin="1">Separator: </Label>
            <TextBox Background="DimGray" Foreground="Yellow" Margin="1" Width="22" Name="txtSeparator" xml:space="preserve"> - </TextBox>
            <Button Margin="1" Width="76" Name="btnRenameAll" Click="btnRenameAll_Click">Rename All</Button>
            <Button Margin="1" Width="18" Name="btnAbout" Click="btnAbout_Click">?</Button>
        </StackPanel>
        <ListBox Margin="1" Name="lstOutput" Height="260" Background="Black" Foreground="Yellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Visible"></ListBox>
    </StackPanel>
</Window>
